{
  "name": "maraxsis-no-base-quality",
  "version": "1.0.0",
  "description": "Remove base quality from Planet Maraxsis Hydro Plant",
  "scripts": {
    "build": "run-p build:*",
    "build:scripts": "tstl -p tsconfig.json",
    "build:public": "cpx \"public/**/*.*\" dist/MaraxsisNoBaseQuality",
    "dev": "run-p dev:*",
    "dev:scripts": "concurrently \"tstl -p tsconfig.json --watch",
    "dev:public": "cpx \"public/**/*.*\" dist/MaraxsisNoBaseQuality --watch",
    "install-mod": "run-s build install-mod:copy",
    "install-mod:copy": "node scripts/install",
    "clean": "rimraf dist"
  },
  "license": "MIT",
  "devDependencies": {
    "cpx2": "^8.0.0",
    "factorio-types": "^1.2.49",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "typescript-to-lua": "^1.32.0"
  }
}
